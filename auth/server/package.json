{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Fastify server with Prisma",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --transpile-only ./src",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "prisma": "dotenv -- prisma",
    "db:create": "yarn prisma migrate save --experimental",
    "db:apply": "yarn prisma migrate up --experimental",
    "seed": "dotenv -- ts-node prisma/seed.ts",
    "lint": "eslint --cache --fix",
    "test": "dotenv -e .env.test -- jest"
  },
  "keywords": [],
  "author": {
    "name": "Ryan Dsouza",
    "email": "dsouza.ryan.11@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "2.30.3",
    "bcrypt": "5.0.1",
    "fastify": "3.22.1",
    "fastify-cookie": "5.3.1",
    "fastify-cors": "6.0.2",
    "fastify-helmet": "5.3.2",
    "glob": "7.2.0",
    "jsonwebtoken": "8.5.1",
    "ms": "2.1.3",
    "zod": "3.11.6"
  },
  "devDependencies": {
    "@prisma/cli": "2.20.1",
    "@types/bcrypt": "10.0.28-alpha",
    "@types/eslint": "7.28.2",
    "@types/glob": "7.2.0",
    "@types/jest": "26.0.24",
    "@types/jsonwebtoken": "8.5.5",
    "@types/ms": "0.7.31",
    "@types/nanoid": "2.1.0",
    "@types/node": "14.17.32",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "4.0.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "26.6.3",
    "jest-environment-node": "26.6.2",
    "nanoid": "3.1.30",
    "supertest": "6.1.6",
    "ts-jest": "26.5.6",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.4",
    "typesync": "0.8.0"
  }
}
